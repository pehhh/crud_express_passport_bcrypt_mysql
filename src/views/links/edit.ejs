<%- include('../partials/header');  -%>
<%- include('../partials/navigation'); %>
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card bg-dark border border-dark">
                <div class="card-body">
                    <form action="/links/edit/<%= data.id %>" method="POST">
                        <div class="form-group">
                            <input type="text" name="title" class="form-control bg-dark text-light" placeholder="Title"
                                value="<%= data.title %>" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="url" name="url" class="form-control bg-dark text-light" placeholder="URL"
                                value="<%= data.url %>">
                        </div>
                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control bg-dark text-light"
                                placeholder="Description"><%= data.description %></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer');  -%>